<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_wifi_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liviu.wifilog.WifiListFragment">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="408dp"
        android:id="@+id/listWifiDetected"
        android:layout_alignTop="@+id/buttonTrack" />

    <Button
        android:text="Track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editWifiName"
        android:id="@+id/buttonTrack"
        android:onClick="startTracking"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Network Name"
        android:ems="10"
        android:layout_marginTop="18dp"
        android:id="@+id/editWifiName" />

</RelativeLayout>
